<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:crud='urn:import:ru.egalvi.wallet.client.crud'
             xmlns:c='urn:import:com.google.gwt.user.cellview.client'>
    <g:HTMLPanel>
        <g:HTMLPanel>
            <c:CellTree addStyleNames='browser' ui:field='cellBrowser'/>
        </g:HTMLPanel>
        <section class="category-management">
            <section class="selected-category">
                <g:Label>Выбранная категория:</g:Label>
                <crud:CategoryAddWidget ui:field="viewWidget" editable="false"/>
            </section>
            <section class="add-category">
                <g:Label>Добавить подкатегорию:</g:Label>
                <crud:CategoryAddWidget ui:field="createWidget"/>
            </section>
        </section>
    </g:HTMLPanel>

</ui:UiBinder>
