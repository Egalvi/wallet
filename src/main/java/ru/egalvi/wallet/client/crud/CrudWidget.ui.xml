<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:com.google.gwt.user.cellview.client'>
    <ui:style>
        .browser {
            /*height: 200px;*/
            border: 1px solid #ccc;
            width: 500px;
        }

        .addPanel{
            padding-left: 550px;
        }
    </ui:style>
    <g:HTMLPanel>
        <g:HTMLPanel>
            <c:CellTree addStyleNames='{style.browser}' ui:field='cellBrowser'/>
        </g:HTMLPanel>
        <g:HTMLPanel addStyleNames='{style.addPanel}'>
            <g:Label text="Name:" width="50"/>
            <g:TextBox ui:field="name" width="100"/>
            <g:Button ui:field="addButton" text="Add" width="50"/>
        </g:HTMLPanel>
    </g:HTMLPanel>

</ui:UiBinder>
