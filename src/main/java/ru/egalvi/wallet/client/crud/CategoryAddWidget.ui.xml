<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .categoryAddWidgetLabel {
            float: left;
        }
    </ui:style>
    <g:HTMLPanel>
        <g:Label text="Название:" width="50" addStyleNames="{style.categoryAddWidgetLabel}"/>
        <g:TextBox ui:field="name" width="100"/>
        <g:Button ui:field="saveButton" text="Сохранить" width="100"/>
        <g:Button ui:field="editButton" text="Редактировать" width="100"/>
    </g:HTMLPanel>

</ui:UiBinder>