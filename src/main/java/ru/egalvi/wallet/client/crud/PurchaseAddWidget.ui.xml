<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:HTMLPanel>
        <section>
            <g:Label text="Name:" width="50"/>
            <g:TextBox ui:field="name" width="100"/>
        </section>
        <section>
            <g:Label text="Date:" width="50"/>
            <g:TextBox ui:field="date" width="100"/>
        </section>
        <section>
            <g:Label text="Price:" width="50"/>
            <g:TextBox ui:field="price" width="100"/>
        </section>
        <section>
            <g:Label text="Comment:" width="50"/>
            <g:TextBox ui:field="comment" width="100"/>
        </section>
        <section>
            <g:Label text="Quantity:" width="50"/>
            <g:TextBox ui:field="quantity" width="100"/>
        </section>
        <section>
            <g:Label text="Unit:" width="50"/>
            <g:TextBox ui:field="unit" width="100"/>
        </section>
        <g:Button ui:field="addButton" text="Add" width="50"/>
    </g:HTMLPanel>

</ui:UiBinder>
