<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:dp='urn:import:com.google.gwt.user.datepicker.client'>

    <g:HTMLPanel>
        <section>
            <g:Label text="Название:" width="50"/>
            <g:TextBox ui:field="name" width="100"/>
        </section>
        <section>
            <g:Label text="Дата:" width="50"/>
            <dp:DateBox ui:field="date" width="100"/>
        </section>
        <section>
            <g:Label text="Цена:" width="50"/>
            <g:TextBox ui:field="price" width="100"/>
        </section>
        <section>
            <g:Label text="Комментарий:" width="50"/>
            <g:TextBox ui:field="comment" width="100"/>
        </section>
        <section>
            <g:Label text="Количество:" width="50"/>
            <g:TextBox ui:field="quantity" width="100"/>
        </section>
        <section>
            <g:Label text="Единица измерения:" width="50"/>
            <g:TextBox ui:field="unit" width="100"/>
        </section>
        <g:Button ui:field="addButton" text="Добавить" width="50"/>
    </g:HTMLPanel>

</ui:UiBinder>
