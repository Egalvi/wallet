<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:ru.egalvi.wallet.client.crud'
        xmlns:ch='urn:import:ru.egalvi.wallet.client'>
    <ui:style>
        @external browser, title, category-management, selected-category, .add-category, purchase-add;
        .browser {
            /*height: 200px;*/
            border: 1px solid #ccc;
            width: 500px;
            float: left;
            height: 500px;
            padding: 10px;
            margin: 10px;
            top: 100px;
            position: relative;
        }

        .title {
            font-size: 24px;
            font-weight: bold;
            margin: auto;
            display: inline-block;
        }

        .category-management {
            position: absolute;
            padding-left: 20px;
        }

        .selected-category {
            position: relative;
        }

        .category-management button {
            width: 70px;
        }

        .add-category {
            position: relative;
        }

        .purchase-add section {
            display: inline-block;
        }
    </ui:style>
    <g:HTMLPanel>
        <section>
            <c:CrudWidget ui:field='crudWidget'/>
        </section>
        <section>
            <g:Label>Purchases attached to the selected category:</g:Label>
            <c:PurchaseWidget ui:field='purchaseWidget'/>
        </section>
        <section>
            <c:DefaultContentGeneratorWidget/>
        </section>
        <section>
            <ch:Pie/>
        </section>
    </g:HTMLPanel>

</ui:UiBinder>